<Window x:Class="MineSweeperMulitplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeperMulitplayer"
        mc:Ignorable="d"
        Title="MineSweeper Multiplayer" ResizeMode="CanMinimize" Width="540" Height="400">
    <Grid KeyDown="Grid_KeyDown">
        <Grid HorizontalAlignment="Left" Height="100" VerticalAlignment="Top"/>
        <Label Content="%Score%" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.776,5.07" Margin="10,10,0,0"/>
        <Label Content="%Time%" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.776,5.07" Margin="151,10,0,0"/>
        <Border HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="200" Margin="10,50,0,0" BorderThickness="1" BorderBrush="Black">
            <Grid x:Name="GameField"/>
        </Border>
        <Button Content="Start" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" Height="20" Margin="74,13,0,0"/>
        <Label Name="DebugInfo" Content="Debug info" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,100,0,0"/>
    </Grid>
</Window>
